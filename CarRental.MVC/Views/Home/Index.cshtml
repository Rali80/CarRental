@model List<CarRental.MVC.ViewModels.CarViewModel>
@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">
            <i class="bi bi-car-front"></i> Car Rental
        </h1>
        <p class="lead">Find the perfect car for your next trip</p>
    </div>
</div>

<div class="container my-5">
    <div class="row mb-4">
        <div class="col">
            <h2 class="mb-4">Available Cars</h2>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No cars are available at this moment.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var car in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card car-card">
                        <img src="@(string.IsNullOrEmpty(car.ImageUrl) ? "https://via.placeholder.com/400x200?text=" + car.Brand + "+" + car.Model : car.ImageUrl)"
                             class="card-img-top car-image"
                             alt="@car.Brand @car.Model">
                        <div class="card-body">
                            <h5 class="card-title">@car.Brand @car.Model (@car.Year)</h5>
                            <p class="card-text">
                                <span class="badge bg-secondary">@car.Category</span>
                                <span class="badge bg-info text-dark">
                                    <i class="bi bi-people-fill"></i> @car.Passengers passengers
                                </span>
                            </p>
                            <p class="card-text text-muted">@car.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-primary fw-bold fs-4">$@car.PricePerDay/day</span>
                                <a href="/Home/Details/@car.Id" class="btn btn-primary">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>