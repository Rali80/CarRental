@model CarRental.MVC.ViewModels.CarViewModel
@{
    ViewData["Title"] = $"{Model.Brand} {Model.Model}";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/600x400?text=" + Model.Brand + "+" + Model.Model : Model.ImageUrl)" 
                 class="img-fluid rounded shadow" 
                 alt="@Model.Brand @Model.Model">
        </div>
        <div class="col-lg-6">
            <h1 class="mb-3">@Model.Brand @Model.Model</h1>
            <h3 class="text-primary mb-4">$@Model.PricePerDay <small class="text-muted">/ día</small></h3>
            
            <div class="mb-4">
                <span class="badge bg-secondary fs-6 me-2">@Model.Category</span>
                @if (Model.IsAvailable)
                {
                    <span class="badge bg-success fs-6">Disponible</span>
                }
                else
                {
                    <span class="badge bg-danger fs-6">No Disponible</span>
                }
            </div>
            
            <ul class="list-group mb-4">
                <li class="list-group-item">
                    <i class="bi bi-calendar3"></i> <strong>Año:</strong> @Model.Year
                </li>
                <li class="list-group-item">
                    <i class="bi bi-palette"></i> <strong>Color:</strong> @Model.Color
                </li>
                <li class="list-group-item">
                    <i class="bi bi-card-text"></i> <strong>Placa:</strong> @Model.LicensePlate
                </li>
                <li class="list-group-item">
                    <i class="bi bi-people-fill"></i> <strong>Capacidad:</strong> @Model.Passengers pasajeros
                </li>
            </ul>
            
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="mb-4">
                    <h5>Descripción</h5>
                    <p>@Model.Description</p>
                </div>
            }
            
            @if (Model.IsAvailable)
            {
                @if (Context.Session.GetString("AccessToken") != null)
                {
                    <a href="/Reservations/Create?carId=@Model.Id" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-calendar-check"></i> Reservar Ahora
                    </a>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> 
                        <a href="/Account/Login">Inicia sesión</a> o 
                        <a href="/Account/Register">regístrate</a> para reservar este coche.
                    </div>
                }
            }
            else
            {
                <button class="btn btn-secondary btn-lg w-100" disabled>
                    No Disponible
                </button>
            }
        </div>
    </div>
    
    <div class="mt-5">
        <a href="/" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver a la lista
        </a>
    </div>
</div>
