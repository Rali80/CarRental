@model List<CarRental.MVC.ViewModels.CarViewModel>
@{
    ViewData["Title"] = "Manage Cars";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-car-front"></i> Manage Cars
        </h1>
        <a href="/Admin/CreateCar" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Car
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No cars are registered.
            <a href="/Admin/CreateCar" class="alert-link">Add the first one</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Make/Model</th>
                        <th>Year</th>
                        <th>License Plate</th>
                        <th>Price/Day</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in Model)
                    {
                        <tr>
                            <td>@car.Id</td>
                            <td>
                                <strong>@car.Brand @car.Model</strong>
                            </td>
                            <td>@car.Year</td>
                            <td>@car.LicensePlate</td>
                            <td class="text-primary fw-bold">$@car.PricePerDay</td>
                            <td><span class="badge bg-secondary">@car.Category</span></td>
                            <td>
                                @if (car.IsAvailable)
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Not Available</span>
                                }
                            </td>
                            <td>
                                <a href="/Admin/EditCar/@car.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form method="post" asp-action="DeleteCar" asp-route-id="@car.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger"
                                            onclick="return confirm('Are you sure you want to delete this car?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-4">
        <a href="/Admin" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>